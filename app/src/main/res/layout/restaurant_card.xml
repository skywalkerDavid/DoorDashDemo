<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/RestaurantCardView">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/resturant_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/card_inner_padding_left_right"
        android:layout_marginStart="@dimen/card_inner_padding_left_right"
        android:layout_marginTop="@dimen/card_inner_padding_top_bottom"
        android:layout_marginBottom="@dimen/card_inner_padding_top_bottom"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        style="@style/RestaurantCardText.Title"
        android:id="@+id/resturant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/resturant_image"
        android:layout_toEndOf="@+id/resturant_image"
        android:layout_marginLeft="@dimen/card_inner_padding_left_right"
        android:layout_marginRight="@dimen/card_inner_padding_left_right"
        android:layout_marginTop="@dimen/card_inner_padding_top_bottom"
        tools:text="A Restaurant"/>

    <TextView
        style="@style/RestaurantCardText.Tags"
        android:id="@+id/resturant_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resturant_title"
        android:layout_alignLeft="@+id/resturant_title"
        android:layout_alignStart="@+id/resturant_title"
        tools:text="Thai, Good"/>

    <TextView
        style="@style/RestaurantCardText.Price"
        android:id="@+id/resturant_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/resturant_title"
        android:layout_alignStart="@+id/resturant_title"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/card_inner_padding_top_bottom"
        tools:text="$1.99"/>

    <TextView
        style="@style/RestaurantCardText.Status"
        android:id="@+id/resturant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/card_inner_padding_left_right"
        android:layout_marginEnd="@dimen/card_inner_padding_left_right"
        android:paddingBottom="@dimen/card_inner_padding_top_bottom"
        tools:text="50 Mins"/>

    <ImageButton
        android:id="@+id/add_to_favorite"
        android:contentDescription="@string/add_to_favorite_button_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_unselected"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>